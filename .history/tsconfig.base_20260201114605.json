{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",  // ← Explicit module
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",  // ← Cho React 19
    
    // Strict mode
    "strict": true,
    "noUncheckedIndexedAccess": true,  // ← Bổ sung
    "noImplicitReturns": true,         // ← Bổ sung
    "noFallthroughCasesInSwitch": true,// ← Bổ sung
    "useUnknownInCatchVariables": true,// ← Bổ sung
    
    // Module resolution
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,  // ← Cho tsup/esbuild
    
    // Path mapping (optional, cho dev)
    "baseUrl": ".",
    "paths": {
      "@supportops/ui-theme": ["./packages/ui/theme/src"],
      "@supportops/ui-form": ["./packages/ui/form/src"],
      "@supportops/ui-common": ["./packages/ui/common-components/src"],
      "@supportops/core": ["./packages/core/src"]
    }
  }
}