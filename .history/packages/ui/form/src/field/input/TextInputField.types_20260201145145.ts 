// packages/ui/form/src/field/input/TextInputField.types.ts

import type {ReactNode} from 'react'
import type {
  Control,
  FieldPath,
  FieldValues,
  RegisterOptions,
} from 'react-hook-form'
import type {TextFieldProps} from '@mui/material/TextField'

export type TextInputFieldStatus = 'default' | 'success' | 'error'

export interface TextInputFieldProps<
  TFieldValues extends FieldValues = FieldValues,
  TName extends FieldPath<TFieldValues> = FieldPath<TFieldValues>,
> extends Omit<TextFieldProps, 'name' | 'error'> {
  /** Field name - required for react-hook-form */
  name: TName

  /** React Hook Form control */
  control: Control<TFieldValues>

  /** Validation rules */
  rules?: RegisterOptions<TFieldValues, TName>

  /** Label text */
  label?: string

  /** Placeholder text */
  placeholder?: string

  /** Helper text shown below input */
  helperText?: ReactNode

  /** Success message - shown when status is 'success' */
  successMessage?: ReactNode

  /** Start icon/adornment */
  startIcon?: ReactNode

  /** End icon/adornment */
  endIcon?: ReactNode

  /** Input status */
  status?: TextInputFieldStatus

  /** Show success state when field is valid and touched */
  showSuccessState?: boolean

  /** Custom success icon */
  successIcon?: ReactNode

  /** Custom error icon */
  errorIcon?: ReactNode

  /** Hide helper text area when empty */
  hideEmptyHelperText?: boolean
}