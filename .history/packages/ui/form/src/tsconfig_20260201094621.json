{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@glohow-pro/form/*": [
        "src/*"
      ],
      "@glohow-pro/i18n/*": [
        "../../core/i18n/src/*"
      ],
      "@glohow-pro/common-types/*": [
        "../../common-types/src/*"
      ],
      "@glohow-pro/ui-components/*": [
        "../ui-components/src/*"
      ],
      "@glohow-pro/dialog/*": [
        "../dialog/src/*"
      ],
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
